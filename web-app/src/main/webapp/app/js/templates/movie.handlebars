<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <form class="form-horizontal ux-movie-form" role="form" id="uxMovieForm">
            <button type="button" class="ux-close close font-weight-light close-x" data-dismiss="modal" aria-hidden="true">&times;</button>
            <div class="modal-body">

                    <div class="form-group">
                        <label for="{{id_next}}" class="col-12 mb-0 text-muted control-label text-uppercase small">{{i18n "title"}}</label>

                        <div class="col-12">
                            <input class="form-control ux-title" id="{{id_current}}" placeholder="{{i18n 'title'}}"
                                   type="text" value="{{title}}" name="title" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{id_next}}" class="col-12 mb-0 text-muted control-label text-uppercase small">{{i18n "director"}}</label>

                        <div class="col-12">
                            <input class="form-control ux-director" id="{{id_current}}"
                                   type="text" placeholder="{{i18n 'director'}}" value="{{director}}" name="director" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{id_next}}" class="col-12 mb-0 text-muted control-label text-uppercase small">{{i18n "genre"}}</label>

                        <div class="col-12">
                            <input class="form-control ux-genre" id="{{id_current}}" placeholder="{{i18n 'genre'}}"
                                   type="text" value="{{genre}}" name="genre" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{id_next}}" class="col-12 mb-0 text-muted control-label text-uppercase small">{{i18n "rating"}}</label>

                        <div class="col-12">
                            <input class="form-control ux-rating" id="{{id_current}}"
                                   type="number" min="0" max="10" placeholder="{{i18n 'rating'}}"
                                   value="{{rating}}" name="rating" required>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="{{id_next}}" class="col-12 mb-0 text-muted control-label text-uppercase small">{{i18n "year"}}</label>

                        <div class="col-12">
                            <input class="form-control ux-year" id="{{id_current}}" placeholder="{{i18n 'year'}}"
                                   type="number" min="1900" max="{{currentYear}}" value="{{year}}" name="year" required>
                        </div>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default ux-close" data-dismiss="modal">{{i18n "cancel"}}</button>
                <button type="submit" class="btn btn-primary ux-save">{{i18n "save"}}</button>
            </div>
        </form>
    </div>
</div>
